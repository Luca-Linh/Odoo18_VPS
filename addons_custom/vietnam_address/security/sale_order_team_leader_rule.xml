<odoo>
    <data noupdate="1">

        <record id="sale_order_team_leader_rule" model="ir.rule">
        <field name="name">Sales Orders: Team Leader Limited Access</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <!-- Dùng quan hệ nhiều cấp qua team_id -->
        <field name="domain_force">[('team_id.member_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>


    </data>
</odoo>
