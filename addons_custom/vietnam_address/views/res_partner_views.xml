<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vn_address_res_partner_form_view_inherit" model="ir.ui.view">
        <field name="name">vn.address.res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//span[@name='address_name']" position="replace">

            </xpath>
             <xpath expr="//div[@class='o_address_format']" position="replace">
                    <field name="province_id" options="{'no_open':true,'no_create':true}"/>
                    <field name="district_id" options="{'no_open':true,'no_create':true}" domain="[('province_id', '=', province_id)]"/>
                    <field name="ward_id" options="{'no_open':true,'no_create':true}" domain="[('district_id', '=', district_id)]"/>
                    <field name="street"/>
             </xpath>
            <xpath expr="//page[@name='internal_notes']" position="before">
                <page string="Base Address" name="base_address" groups="base.group_no_one">
                    <group>
                        <field name="street" id="street_page_lead" readonly="1"/>
                        <field name="street2" invisible="1"/>
                        <field name="city" string="City" readonly="1"/>
                        <field name="state_id" string="State" readonly="1"/>
                        <field name="zip" invisible="1"/>
                        <field name="country_id" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>